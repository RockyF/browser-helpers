{
	"compilerOptions": {
		"module": "commonjs",
		"target": "ES2015",
		"sourceMap": false,
		"outDir": "dist",
		"declaration": true,
		"declarationDir": "types",
		"moduleResolution": "Node",
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"importHelpers": true,
		"lib": [
			"DOM",
			"ESNext"
		]
	},
	"include": [
		"src"
	],
	"exclude": [
		"node_modules"
	]
}
